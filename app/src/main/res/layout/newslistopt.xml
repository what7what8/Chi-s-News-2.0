<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="OnClick"
    tools:context=".LastNews"
    tools:ignore="UsingOnClickInXml">

    <TextView
        android:id="@+id/newscode"
        android:layout_width="0dp"
        android:layout_height="96sp"
        android:layout_marginStart="8dp"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:shadowColor="@color/shadow"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:text="TextView"
        android:textColor="@color/text"
        android:textSize="52sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/newsimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/newsimg"
        android:layout_width="108sp"
        android:layout_height="96sp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="@+id/newscode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/cy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:shadowColor="@color/shadow"
        android:text="TextView"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/newscode"
        app:layout_constraintTop_toBottomOf="@+id/newscode" />

    <TextView
        android:id="@+id/newsdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:shadowColor="@color/shadow"
        android:text="TextView"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/newsimg"
        app:layout_constraintStart_toEndOf="@+id/cy"
        app:layout_constraintTop_toBottomOf="@+id/newscode" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>